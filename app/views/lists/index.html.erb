<div class="banner">
  <h1 class="mb-4">Your Lists</h1>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
<% @lists.each do |list| %>
<div class="col">
  <div class="card h-100 shadow-sm">
    <div class="card-body d-flex flex-column">
  <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
  <div class="mt-auto d-flex justify-content-between">
  <%= link_to "View", list_path(list), class: "btn btn-primary" %>
  <%= link_to "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger text-white" %>
  </div>
  </div>
  </div>
  </div>
<% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-success mt-4" %>
