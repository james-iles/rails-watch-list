<%= render "shared/banner",
      title: "Your Watch List",
      background_image: "cinema-dark.jpg" %>

<div class="row row-cols-1 row-cols-md-3 g-4">
<% @lists.each do |list| %>
<div class="col">
  <div class="card list-card">
  <h5 class="card-title"><%= list.name %></h5>
  <div class="mt-auto d-flex justify-content-between">
  <%= link_to "View", list_path(list), class: "btn btn-accent btn-sm" %>
  <%= link_to "Delete", list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-accent btn-sm text-white" %>
  </div>
  </div>
  </div>
<% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-success mt-4" %>
